<div class="flex items-center justify-center">
  <div class="max-w-md w-full bg-white p-8 rounded-lg shadow-md">
    <h1 class="text-3xl font-bold mb-6 text-center"><%= t('sessions.new.title') %></h1>

    <%= form_with(url: session_path, local: true) do |form| %>

      <!-- Email Field -->
      <div class="mb-4">
        <%= form.label :email, t('sessions.new.email'), class: "block text-gray-700 font-semibold mb-2" %>
        <%= form.email_field :email, autofocus: true, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <!-- Password Field -->
      <div class="mb-4">
        <%= form.label :password, t('sessions.new.password'), class: "block text-gray-700 font-semibold mb-2" %>
        <%= form.password_field :password, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <!-- Submit Button -->
      <div class="flex justify-end">
        <%= form.submit t('sessions.new.sign_in'), class: "px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700" %>
      </div>

    <% end %>

    <!-- Forgot Password Link -->
    <p class="mt-4 text-center">
      <%= link_to t('sessions.new.forgot_password'), new_password_reset_path, class: "text-indigo-600 hover:underline" %>
    </p>
  </div>
</div>
