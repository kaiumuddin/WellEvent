<div class="dashboard-container">
</div>
  <h1>Welcome, <%= current_user.name %> (Organizer)</h1>

  <!-- Total Events -->
  <div class="dashboard-card">
    <h3>Total Events Organized</h3>
    <p><%= @total_events %></p>
  </div>

  <!-- Upcoming Events -->
  <div class="dashboard-card">
    <h3>Upcoming Events</h3>
    <p><%= @upcoming_events %></p>
  </div>

  <!-- Past Events -->
  <div class="dashboard-card">
    <h3>Past Events</h3>
    <p><%= @past_events %></p>
  </div>

  <!-- List of Events with Registrations and Revenue -->
  <div class="dashboard-card">
    <h3>Event Details</h3>
    <table>
      <thead>
        <tr>
          <th>Event Name</th>
          <th>Registrations</th>
          <th>Revenue</th>
        </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td>
              <%= link_to event.name, organizer_event_path(event) %>
            </td>
            <td><%= event.registrations.count %></td>
            <td>$<%= event.price * event.registrations.count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
