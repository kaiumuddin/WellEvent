<h1><%= t('admin.users.index_title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('admin.users.user_details.name') %></th>
      <th><%= t('admin.users.user_details.email') %></th>
      <th><%= t('admin.users.user_details.admin') %></th>
      <th><%= t('admin.users.actions.actions') %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin? ? t('admin.users.yes') : t('admin.users.no') %></td>
        <td>
          <%= link_to t('admin.users.actions.show'), admin_user_path(user) %> |
          <%= link_to t('admin.users.actions.delete'), admin_user_path(user), data: { turbo_method: :delete, turbo_confirm: t('admin.users.delete_confirmation') } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
