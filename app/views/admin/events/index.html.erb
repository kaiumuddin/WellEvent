<h1><%= t('admin.events.index_title') %></h1>

<%= link_to t('admin.events.new_event'), new_admin_event_path, class: 'btn btn-primary' %>

<% if @events.any? %>
  <table>
    <thead>
      <tr>
        <th><%= t('admin.events.form.image') %></th>
        <th><%= t('admin.events.form.name') %></th>
        <th><%= t('admin.events.form.location') %></th>
        <th><%= t('admin.events.form.starts_at') %></th>
        <th><%= t('admin.events.form.price') %></th>
        <th><%= t('actions.edit') %></th>
        <th><%= t('actions.delete') %></th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td>
            <% if event.image.attached? %>
              <%= image_tag url_for(event.image), alt: event.name, width: 50, height: 50 %>
            <% else %>
              <p><%= t('admin.events.no_image') %></p>
            <% end %>
          </td>
          <td><%= event.name %></td>
          <td><%= event.location %></td>
          <td><%= event.starts_at.strftime("%b %d, %Y %I:%M %p") %></td>
          <td><%= number_to_currency(event.price) %></td>
          <td><%= link_to t('actions.edit'), edit_admin_event_path(event) %></td>
          <td>
            <%= link_to t('actions.delete'), admin_event_path(event), data: { turbo_method: :delete, turbo_confirm: t('alerts.confirm_delete') } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p><%= t('admin.events.no_events') %></p>
<% end %>
