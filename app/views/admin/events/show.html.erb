<h1><%= @event.name %></h1>

<% if @event.image.attached? %>
  <div>
    <%= image_tag url_for(@event.image), alt: @event.name, style: "max-width: 300px; height: auto;" %>
  </div>
<% else %>
  <p>No image available for this event.</p>
<% end %>

<p><strong>Description:</strong> <%= @event.description %></p>
<p><strong>Location:</strong> <%= @event.location %></p>
<p><strong>Price:</strong> <%= number_to_currency(@event.price) %></p>
<p><strong>Capacity:</strong> <%= @event.capacity %></p>
<p><strong>Starts At:</strong> <%= @event.starts_at.strftime("%b %d, %Y %I:%M %p") %></p>

<%= link_to 'Edit', edit_admin_event_path(@event), class: 'btn btn-secondary' %> |
<%= link_to 'Back to Events', admin_events_path, class: 'btn btn-primary' %>
