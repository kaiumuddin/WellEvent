<%= form_with(model: category, url: category.new_record? ? admin_categories_path : admin_category_path(category)) do |form| %>
  <div class="form-group">
    <%= form.label :name, t('admin.categories.form.name') %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description, t('admin.categories.form.description') %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit t('admin.categories.form.submit'), class: 'btn btn-primary' %>
  </div>
<% end %>
