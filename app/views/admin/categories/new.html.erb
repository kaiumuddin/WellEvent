<h1 class="text-2xl font-bold mb-6">
  <%= @category.new_record? ? t('admin.categories.new_category') : t('admin.categories.edit_category') %>
</h1>

<!-- Render the form partial -->
<%= render 'form', category: @category %>

<!-- Back to Categories Link -->
<%= link_to t('admin.categories.back_to_categories'), admin_categories_path, class: 'inline-block mt-2 px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700 transition duration-200' %>
