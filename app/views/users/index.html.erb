<h1><%= t('users.index_title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('users.index.name') %></th>
      <th><%= t('users.index.email') %></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
